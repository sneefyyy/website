{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/latent-space", "destination": "/projects/latent-space/index.html" },
    { "source": "/synesthesia-machine", "destination": "/projects/latent-space/index.html" }
  ],
  "functions": {
    "api/**/*.py": {
      "memory": 1024,
      "maxDuration": 60,
      "excludeFiles": "{tests/**,__tests__/**,**/*.test.py,**/test_*.py,__pycache__/**,.venv/**,*.md}"
    }
  }
}
